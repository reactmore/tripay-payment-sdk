{
    "name": "reactmore/tripay-payment-sdk",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Reactmore\\TripayPaymentSdk\\": "src/"
        }
    },
    "authors": [
        {
            "name": "reactmore",
            "email": "reactmorecom@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "codeigniter4/devkit": "^1.3",
        "codeigniter4/framework": "^4.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff"
    }
}
